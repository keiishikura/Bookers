<body>
  <p id = "notice"></p>
  <h1>Books</h1>
  
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan = "3"></th>
      </tr>
    </thead>
    
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td>
          <%= link_to "show" ,book_path(book.id) %>
          <%= link_to "edit" ,edit_book_path(book.id) %>
          <%= link_to "destroy" ,destroy_book_path(book.id),method: :delete,"data-confirm" => "Are you sure?" %>
        </td>
      <% end %>
      </tr>
    </tbody>
  </table>
  
  <h2>New Book</h2>
  
  <% if @book.errors.any? %>
    <div id ="error_explanation">
      <% @book.errors.count %>
      <h2>2 errors prohibited this book from being saved:</h2>
      <ul><% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    </div>
  
  <%= form_with model: @book,url:'/books' ,method: :post do |f| %>
  
  <div class="field">
    <label for = "book_title">Title</label>
    <%= f.text_field :title %>
  </div>
  
  <div class="field">
    <label for = "book_body">Body</label>
    <%= f.text_area :body %>
  </div>
  
  <div class="action">
    <%= f.submit 'Create Book' %>
  </div>
  
  <% end %>
  
</body>
